#include<stdio.h>
int main(){
    char s='(';
    char ss=')';
    float x1,x2,y1,y2;
    float mid1,mid2;
    printf("X1\n");
    scanf("%f",&x1);
    printf("Y1\n");
    scanf("%f",&y1);
    printf("X2\n");
    scanf("%f",&x2);
    printf("Y2\n");
    scanf("%f",&y2);
    mid1=((x1+x2)/2.0);
    mid2=((y1+y2)/2.0);
    printf("Binoy's house is located at %c%.1f,%.1f%c",s,mid1,mid2,ss);
    return 0;
}
